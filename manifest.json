{
  "manifest_version": 2,
  "name": "LyDL note",
  "description": "This extension notes text content from page",
  "version": "1.0",

  "background": {
    "scripts": ["common.js","uuid.js","background.js"]
  },


  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "LyDL note"
  },

  "icons":
  {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },


  "content_scripts":
    [{
      "matches": ["<all_urls>"],
      "js": ["jquery-3.5.1.min.js", "content-script.js"],
      "run_at": "document_start"
    }],

  "externally_connectable": {
    "matches": ["http://127.0.0.1/validate/login-from-chrome"]
  },

  "web_accessible_resources": ["inject.js"],



  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus",
    "http://*/*",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*/*",
    "https://*/*"
  ]
}
